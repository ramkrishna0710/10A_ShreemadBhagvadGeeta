<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvItemView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2.60dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="6.50dp"
    >
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/verse_selector"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="6.50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvChapterNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chapter 1"
                        android:textColor="@color/orange"
                        android:textSize="15.60sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvChapterTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arjuna Visada Yoga"
                        android:textColor="@color/black"
                        android:textSize="19.50sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivFavouriteFilledSC"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:hapticFeedbackEnabled="true"
                        android:src="@drawable/baseline_favorite_24"
                        android:visibility="gone"
                        app:tint="@color/orange" />

                    <ImageView
                        android:id="@+id/ivFavouriteSC"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:hapticFeedbackEnabled="true"
                        android:src="@drawable/baseline_favorite_border_24"
                        android:visibility="visible"
                        app:tint="@color/orange" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvChapterDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.50dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="The first chapter of the Bhagavad Gita - Arjuna Vishada Yoga introduced the setup.
the setting the characters and the circumstances that led
to the epic battle of Mahabharata, fought between the Pandavas and the K"
                android:textColor="@color/chapterDetail"
                android:textSize="15.60sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36.40dp"
                    android:layout_height="36.40dp"
                    android:src="@drawable/baseline_menu_24"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tvVerseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:text="47"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVerse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3.90dp"
                    android:text="Verses"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgupleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.10"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/up_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:alpha="0.30"
            android:scaleType="centerInside"
            android:src="@drawable/up_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerInside"
            android:alpha="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/down_left"
            android:background="@android:color/transparent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>